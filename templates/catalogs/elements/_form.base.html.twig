<div class="form-group">
    {{ form_widget(form.isActive, {'label': 'Активность', 'translation_domain': false}) }}
    <small class="form-text text-muted">
        {% if element.isSection %}
            Определяет активность раздела и всех вложенных разделов и элементов.
        {% else %}
            Определяет активность элемента, связанных с ним элементов и его публичную доступность.
        {% endif %}
    </small>
</div>
<div class="row">
    <div class="col">
        <div class="form-group">
            {{ form_label(form.activeFrom, 'Активен с', {'translation_domain': false}) }}
            {{ form_widget(form.activeFrom) }}
            {{ form_errors(form.activeFrom) }}
            <small class="form-text text-muted">
                Допустимый формат даты: YYYY-MM-DD HH:MM
            </small>
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            {{ form_label(form.activeTo, 'Активен до', {'translation_domain': false}) }}
            {{ form_widget(form.activeTo) }}
            {{ form_errors(form.activeTo) }}
            <small class="form-text text-muted">
                Допустимый формат даты: YYYY-MM-DD HH:MM
            </small>
        </div>
    </div>
</div>
<div class="form-group">
    {{ form_label(form.title, 'form.label.title') }}
    {{ form_widget(form.title, {'attr': {'autofocus': true}}) }}
    {{ form_errors(form.title) }}
    <small class="form-text text-muted">
        {{ 'form.hint.title'| trans }}
    </small>
</div>
<div class="form-group">
    {{ form_label(form.description, 'form.label.description') }}
    {{ form_widget(form.description, {'attr': {'rows': 5}}) }}
    {{ form_errors(form.description) }}
    <small class="form-text text-muted">
        {{ 'form.hint.description'| trans }}
    </small>
</div>