{% extends 'base.html.twig' %}

{% block title %}
    {{ 'form.register.title' | trans }}
{% endblock %}

{% block body %}

    <div class="form form-register">
        {{ form_start(form) }}
        <h3 class="font-weight-normal text-center">{{ 'form.register.title'|trans }}</h3>
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-sm">
                {{ form_row(form.fname, {'attr': {'placeholder': 'form.placeholder.first_name', 'autofocus': true}}) }}
                {{ form_row(form.lname, {'attr': {'placeholder': 'form.placeholder.last_name'}}) }}
                {{ form_row(form.sname) }}
            </div>
            <div class="col-sm">
                {{ form_row(form.username, {'attr': {'placeholder': 'form.placeholder.email'}}) }}
                {{ form_row(form.password.first, {'attr': {'placeholder': 'form.placeholder.password'}}) }}
                {{ form_row(form.password.second, {'attr': {'placeholder': 'form.placeholder.repeat_password'}}) }}
            </div>
        </div>

        <div class="row text-center">
            <div class="col-6 offset-3">
                <button type="submit" class="btn btn-primary btn-block">{{ 'form.register.submit' | trans }}</button>

                <ul class="list-unstyled">
                    <li><a href="{{ relative_path('login') }}">{{ 'form.register.login_link' | trans }}</a></li>
                </ul>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}

{% block styles %}
    <!--suppress CssUnusedSymbol -->
    <style type="text/css">
        html, body {
            height: 100%;
        }
        body {
            display: flex;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }
        .form-register {
            width: 100%;
            max-width: 600px;
            padding: 15px;
            margin: auto;
        }
        .form-register .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }
        .form-register h3 {
            padding-bottom: 30px;
        }
        .form-register .btn-primary {
            margin: 10px 0;
        }
    </style>
{% endblock %}