{{ form_start(form, params) }}
<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">{{ title }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body" style="height: 450px;">
            {{ include('tabs.html.twig', {'tabs': [
                {
                    'title': 'Пользователь',
                    'target': 'user-base',
                    'view': 'users/users/_form.base.html.twig',
                },
                {
                    'title': 'Доступ',
                    'target': 'user-access',
                    'view': 'users/users/_form.access.html.twig',
                },
                {
                    'title': 'Пароль',
                    'target': 'user-password',
                    'view': 'users/users/_form.password.html.twig',
                },
                {
                    'title': 'Компании',
                    'target': 'user-accounts',
                    'path': user.uuid is not null ? path('user_account_index', {'uuid': user.uuid}) : null,
                    'disabled': user.uuid is null
                },
                {
                    'title': 'Дополнительно',
                    'target': 'user-extra',
                    'view': 'users/users/_form.extra.html.twig',
                },
            ]}) }}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить</button>
            <button type="submit" class="btn btn-primary">Подтвердить</button>
        </div>
    </div>
</div>
{{ form_end(form) }}