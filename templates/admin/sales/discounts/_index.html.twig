<div class="btn-toolbar justify-content-between" role="toolbar">
    <div class="btn-toolbar-container">
        <div class="btn-group mr-2" role="group">
            <a class="btn btn-outline-primary" href="{{ path('sales_discount_new') }}" data-toggle="modal" data-target="#form-modal">
                {{ 'table.toolbar.create' | trans }}
            </a>
        </div>
    </div>
</div>
<br>
<table class="table table-striped table-borderless">
    <colgroup>
        <col span="2">
        <col style="width:100px">
        <col style="width:70px">
        <col style="width:50px">
    </colgroup>
    <thead>
        <tr>
            <th>Название</th>
            <th>Код</th>
            <th class="text-right text-nowrap">Скидка, %</th>
            <th class="text-right">Сорт.</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for discount in paginator %}
        <tr>
            <td><a href="{{ path('sales_discount_edit', {'uuid': discount.uuid}) }}" data-toggle="modal" data-target="#form-modal">{{ discount.title }}</a></td>
            <td>{{ discount.code }}</td>
            <td class="text-right">{{ discount.value * 100 }}</td>
            <td class="text-right">{{ discount.sort }}</td>
            <td style="overflow: visible">
                <div class="dropdown">
                    <span class="" data-toggle="dropdown" style="cursor:pointer;">
                        <i class="material-icons btn-block">menu</i>
                    </span>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="{{ path('sales_discount_edit', {'uuid': discount.uuid}) }}" data-toggle="modal" data-target="#form-modal">{{ 'table.action.edit' | trans }}</a>
                        <a class="dropdown-item" href="{{ path('sales_discount_copy', {'uuid': discount.uuid}) }}" data-toggle="modal" data-target="#form-modal">{{ 'table.action.copy' | trans }}</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('sales_discount_delete', {'uuid': discount.uuid}) }}" data-toggle="confirm" data-method="delete">{{ 'table.action.delete' | trans }}</a>
                    </div>
                </div>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">{{ 'table.empty' | trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{{ include('paginator.html.twig', {'path': 'sales_discount_index'}) }}