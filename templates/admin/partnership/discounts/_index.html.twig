{% extends "empty.html.twig" %}

{% block content %}
    <div class="btn-toolbar justify-content-between" role="toolbar">
        <div class="btn-toolbar-container">
            <div class="btn-group mr-2" role="group">
                <a class="btn btn-outline-primary" href="{{ path('partnership_discount_new', {'uuid': status.uuid}) }}" data-toggle="modal" data-target="#discount-modal">
                    {{ 'table.toolbar.create' | trans }}
                </a>
            </div>
        </div>
    </div>
    <br>
    <table class="table table-striped table-borderless">
        <colgroup>
            <col>
            <col style="width:100px">
            <col style="width:150px">
            <col style="width:70px">
            <col style="width:50px">
        </colgroup>
        <thead>
            <tr>
                <th>Тип</th>
                <th class="text-right text-nowrap">Скидка, %</th>
                <th>Срок действия</th>
                <th>Акт.</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for discount in paginator %}
            <tr>
                <td><a href="{{ path('partnership_discount_edit', {'uuid': discount.uuid}) }}" data-toggle="modal" data-target="#discount-modal">{{ discount.discount.title }}</a></td>
                <td class="text-right">{{ discount.value * 100 }}</td>
                <td>
                    {% if discount.expiredAt is not null %}
                        {{ discount.expiredAt | date }}
                    {% else %}
                        <em class="text-muted">Нет данных</em>
                    {% endif %}
                </td>
                <td>{{ (discount.isExpired ? 'no' : 'yes') | trans }}</td>
                <td style="overflow: visible">
                    <div class="dropdown context">
                        <span data-toggle="dropdown">
                            <i class="material-icons btn-block">menu</i>
                        </span>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="{{ path('partnership_discount_edit', {'uuid': discount.uuid}) }}" data-toggle="modal" data-target="#discount-modal">{{ 'table.action.edit' | trans }}</a>
                            <a class="dropdown-item" href="{{ path('partnership_discount_copy', {'uuid': discount.uuid}) }}" data-toggle="modal" data-target="#discount-modal">{{ 'table.action.copy' | trans }}</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('partnership_discount_delete', {'uuid': discount.uuid}) }}" data-toggle="confirm" data-method="delete">{{ 'table.action.delete' | trans }}</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'table.empty' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ include('paginator.html.twig', {'path': 'partnership_discount_index', 'params': {'uuid': status.uuid}}) }}
{% endblock %}