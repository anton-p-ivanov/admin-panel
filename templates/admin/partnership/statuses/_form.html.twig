{{ form_start(form, params) }}
<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">{{ title }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body" style="height:560px;">
            {{ include('tabs.html.twig', {'tabs': [
                {
                    'title': 'Статус',
                    'target': 'status-base',
                    'view': 'admin/partnership/statuses/_form.base.html.twig',
                },
                {
                    'title': 'Скидки',
                    'target': 'status-discounts',
                    'path': status.uuid is not null ? path('partnership_discount_index', {'uuid': status.uuid}) : null,
                    'disabled': status.uuid is null
                }
            ]}) }}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить</button>
            <button type="submit" class="btn btn-primary">Подтвердить</button>
        </div>
    </div>
</div>
{{ form_end(form) }}