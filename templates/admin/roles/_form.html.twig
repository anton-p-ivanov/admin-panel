{{ form_start(form, params) }}
<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">{{ title }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                {{ form_widget(form.isDefault, {'label': 'form.label.is_default', 'disabled': form.isDefault.vars.checked}) }}
                <small class="form-text text-muted">
                    Присваивается всем новым пользователям автоматически.
                    Только одной роли может быть присвоен статус <span class="text-nowrap">"По-умолчанию"</span>.
                </small>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        {{ form_label(form.title, 'form.label.title') }}
                        {{ form_widget(form.title, {'attr': {'autofocus': true, 'placeholder': 'form.placeholder.title'}}) }}
                        {{ form_errors(form.title) }}
                        <small class="form-text text-muted">
                            {{ 'form.hint.title' | trans }}
                        </small>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        {{ form_label(form.code, 'form.label.code') }}
                        {{ form_widget(form.code, {'attr': {'placeholder': 'form.placeholder.code'}}) }}
                        {{ form_errors(form.code) }}
                        <small class="form-text text-muted">
                            {{ 'form.hint.code' | trans }}
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.description, 'form.label.description') }}
                {{ form_widget(form.description, {'attr': {'placeholder': 'form.placeholder.description', 'rows': 5}}) }}
                {{ form_errors(form.description) }}
                <small class="form-text text-muted">
                    {{ 'form.hint.description' | trans }}
                </small>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить</button>
            <button type="submit" class="btn btn-primary">Подтвердить</button>
        </div>
    </div>
</div>
{{ form_end(form) }}