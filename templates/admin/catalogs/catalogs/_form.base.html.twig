<div class="row">
    <div class="col">
        <div class="form-group">
            {{ form_widget(form.isActive, {'label': 'Активность', 'translation_domain': false}) }}
            <small class="form-text text-muted">
                Определяет активность каталога, связанных с ним элементов и его публичную доступность.
            </small>
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            {{ form_widget(form.isTrading, {'label': 'Торговый каталог', 'translation_domain': false}) }}
            <small class="form-text text-muted">
                Определяет возможность регулирования ценообразования для элементов каталога.
            </small>
        </div>
    </div>
</div>

<div class="form-group">
    {{ form_label(form.title, 'form.label.title') }}
    {{ form_widget(form.title, {'attr': {'autofocus': true}}) }}
    {{ form_errors(form.title) }}
    <small class="form-text text-muted">
        {{ 'form.hint.title'| trans }}
    </small>
</div>
<div class="form-group">
    {{ form_label(form.description, 'form.label.description') }}
    {{ form_widget(form.description, {'attr': {'rows': 5}}) }}
    {{ form_errors(form.description) }}
    <small class="form-text text-muted">
        {{ 'form.hint.description'| trans }}
    </small>
</div>