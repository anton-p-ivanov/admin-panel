<div class="btn-toolbar justify-content-between" role="toolbar">
    <div class="btn-toolbar-container">
        <div class="btn-group mr-2" role="group">
            <a class="btn btn-outline-primary" href="{{ path('address_type_new') }}" data-toggle="modal" data-target="#form-modal">
                {{ 'table.toolbar.create' | trans }}
            </a>
        </div>
    </div>
</div>
<br>
<table class="table table-striped table-borderless">
    <colgroup>
        <col>
        <col style="width:70px" span="2">
        <col style="width:150px">
        <col style="width:50px">
    </colgroup>
    <thead>
    <tr>
        <th>{{ 'table.head.title' | trans }}</th>
        <th>{{ 'table.head.is_default' | trans }}</th>
        <th>{{ 'table.head.sort' | trans }}</th>
        <th>{{ 'table.head.updated_at' | trans }}</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for type in paginator %}
        <tr>
            <td><a href="{{ path('address_type_edit', {'uuid': type.uuid}) }}" data-toggle="modal" data-target="#form-modal">{{ type.title }}</a></td>
            <td>{{ (type.isDefault ? 'yes' : 'no') | trans }}</td>
            <td>{{ type.sort }}</td>
            <td>
                {% if type.workflow is not null %}
                    {{ type.workflow.updatedAt | date }}
                {% else %}
                    <em class="text-muted">Нет данных</em>
                {% endif %}
            </td>
            <td style="overflow: visible">
                <div class="dropdown context">
                    <span data-toggle="dropdown">
                        <i class="material-icons btn-block">menu</i>
                    </span>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="{{ path('address_type_edit', {'uuid': type.uuid}) }}" data-toggle="modal" data-target="#form-modal">{{ 'table.action.edit' | trans }}</a>
                        <a class="dropdown-item" href="{{ path('address_type_copy', {'uuid': type.uuid}) }}" data-toggle="modal" data-target="#form-modal">{{ 'table.action.copy' | trans }}</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('address_type_delete', {'uuid': type.uuid}) }}" data-toggle="confirm" data-method="delete">{{ 'table.action.delete' | trans }}</a>
                        <a class="dropdown-item" href="{{ path('address_type_delete', {'uuid': type.uuid, 'force': true}) }}" data-toggle="confirm" data-method="delete">{{ 'table.action.delete_force' | trans }}</a>
                    </div>
                </div>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">{{ 'table.empty' | trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{{ include('paginator.html.twig', {'path': 'address_type_index'}) }}