{{ form_start(form, params) }}
<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">{{ title }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body" style="height: 510px;">
            {{ include('tabs.html.twig', {'tabs': [
                {
                    'title': 'Параметры',
                    'target': 'template-base',
                    'view': 'mail/templates/_form.base.html.twig'
                },
                {
                    'title': 'Сообщение',
                    'target': 'template-body',
                    'view': 'mail/templates/_form.body.html.twig'
                },
                {
                    'title': 'Дополнительно',
                    'target': 'template-extra',
                    'view': 'mail/templates/_form.extra.html.twig'
                }
            ]}) }}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить</button>
            <button type="submit" class="btn btn-primary">Подтвердить</button>
        </div>
    </div>
</div>
{{ form_end(form) }}