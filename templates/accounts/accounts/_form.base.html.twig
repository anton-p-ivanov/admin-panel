<div class="form-group">
    {{ form_widget(form.isActive, {'label': 'form.label.is_active'}) }}
    <small class="form-text text-muted">
        Определяет активность контрагента, связанных с ним элементов и его публичную доступность.
    </small>
</div>
<div class="form-group">
    {{ form_label(form.title, 'form.label.title') }}
    {{ form_widget(form.title, {'attr': {'autofocus': true}}) }}
    {{ form_errors(form.title) }}
    <small class="form-text text-muted">
        {{ 'form.hint.title'| trans }}
    </small>
</div>
<div class="form-group">
    {{ form_label(form.description, 'form.label.description') }}
    {{ form_widget(form.description, {'attr': {'rows': 5}}) }}
    {{ form_errors(form.description) }}
    <small class="form-text text-muted">
        {{ 'form.hint.description'| trans }}
    </small>
</div>
<div class="row">
    <div class="col-sm">
        <div class="form-group">
            {{ form_label(form.email, 'form.label.email') }}
            {{ form_widget(form.email, {'attr': {'placeholder': 'form.placeholder.email'}}) }}
            {{ form_errors(form.email) }}
            <small class="form-text text-muted">
                {{ 'form.hint.email'| trans }}
            </small>
        </div>
    </div>
    <div class="col-sm">
        <div class="form-group">
            {{ form_label(form.web, 'form.label.url') }}
            {{ form_widget(form.web, {'attr': {'placeholder': 'form.placeholder.url'}}) }}
            {{ form_errors(form.web) }}
            <small class="form-text text-muted">
                {{ 'form.hint.url'| trans }}
            </small>
        </div>
    </div>
</div>